a := [1,2,3];

try{
   println(a[-1:2]); 
} catch(e) {
   println(e.message); // expect: Invalid slice.
}

try{
   println(a[1:-1]);
} catch(e) {
   println(e.message); // expect: Invalid slice.
}

try{
   println(a[-1:-2]);
} catch(e) {
   println(e.message); // expect: Invalid slice.
}

